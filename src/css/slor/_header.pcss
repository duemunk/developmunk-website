header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: -var(--padding-default);
  margin-right: -var(--padding-default);

  & > div {
    margin-left: var(--padding-default);
    margin-right: var(--padding-default);
    margin-bottom: var(--padding-large);
  }
}

@media (--medium-up) {
  header {
    margin-bottom: var(--padding-giant);

    & > div {
      margin-bottom: 0;
    }
  }
}

@media (--large-up) {
  header {
    margin-bottom: -53px;
  }
}
