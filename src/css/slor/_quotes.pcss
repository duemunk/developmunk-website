@import './_settings.pcss';

.quote::before {
  content: "”";
  font-size: 70px;
  float: left;
  width: 40px;
  padding-top: 10px;
  height: 50px; /* HACK to attempt to take up entire height of .quote */
}

.author {
  font-weight: var(--font-weight-strong);
  text-align: right;

  &::before {
    content: "—";
  }

  &::after {
    content: ".";
  }
}
